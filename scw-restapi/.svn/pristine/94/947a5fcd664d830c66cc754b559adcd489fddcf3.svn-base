    @RequestMapping("/baseinfo")
    public ScwReturn<Object> auth(TMemeber memeber) {
        // 按照id更新部分认证的信息
        boolean b = memberService.authBaseInfo(memeber);
        if (b) {
            return ScwReturn.success("基本信息已经录入", null, null);
        } else {
            return ScwReturn.fail("信息录入失败，请重新提交", null, null);
        }
    }

